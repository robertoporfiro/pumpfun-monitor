# .env

# WebSocket URL for PumpPortal
WS_URL=wss://pumpportal.fun/api/data

# RugCheck API Endpoint (Use {} como placeholder)
RUGCHECK_API_ENDPOINT="https://api.rugcheck.xyz/v1/tokens/{}/report"

# Arquivos de Estado e Log (Dentro do volume /data no Docker)
LOG_FILE=pumpportal_monitor_async.log
PROCESSED_TOKENS_FILE=processed_tokens_async.json
PENDING_TOKENS_FILE=pending_tokens_async.json

# Configurações de Verificação API
API_TIMEOUT=10
CHECK_RETRY_DELAY_SECONDS=15
CHECK_MAX_DURATION_SECONDS=180

# State & Connection Config
SAVE_INTERVAL_SECONDS=300
RECONNECT_INTERVAL_MIN=5
RECONNECT_INTERVAL_MAX=60

# Nível de Log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG # Mude para DEBUG para ver logs detalhados do monitoramento

# --- Configurações do Monitor de Mercado (Usado APENAS se SNIPEROO_USE_AUTOBUY_MODE=False) ---
MARKET_MONITOR_DURATION=300
MARKET_POLL_INTERVAL=10
MARKET_MIN_VOLUME_M5=1000
MARKET_MIN_BUYS_M5=10
MARKET_PRICE_DROP_TOLERANCE=0.15
# --- NOVOS FILTROS DE MERCADO ---
MARKET_MIN_BUY_SELL_RATIO=0.50  # Mínimo 50% de compras nas txns de 5m
MARKET_MAX_FDV=200000          # Teto de Fully Diluted Value (MCap est.) em USD
MARKET_MIN_H1_PRICE_CHANGE=-15.0 # Tolera queda de até 15% na última hora
# --- FIM NOVOS FILTROS DE MERCADO ---


# --- Configurações do Sniperoo ---
SNIPEROO_API_KEY=""
SNIPEROO_BUY_ENDPOINT="https://api.sniperoo.app/trading/buy-token?toastFrontendId=0"
SNIPEROO_BUY_AMOUNT_SOL=0.01
SNIPEROO_WALLET_ADDRESS=""
# AutoSell
SNIPEROO_AUTOSELL_ENABLED=True
SNIPEROO_AUTOSELL_PROFIT_PCT=30.0
SNIPEROO_AUTOSELL_STOPLOSS_PCT=40.0
# Controle de Modo AutoBuy
SNIPEROO_USE_AUTOBUY_MODE=True # Define se o bot monitora (False) ou envia AutoBuy (True)
# Parâmetros da Estratégia AutoBuy (Relevante APENAS se SNIPEROO_USE_AUTOBUY_MODE=True)
SNIPEROO_AUTOBUY_PRICE_METRIC_TYPE="price_change"
SNIPEROO_AUTOBUY_PRICE_METRIC_PLUSMINUS="plus"
SNIPEROO_AUTOBUY_PRICE_METRIC_ENABLED=True
SNIPEROO_AUTOBUY_PRICE_METRIC_MIN=20
SNIPEROO_AUTOBUY_PRICE_METRIC_MAX=500
SNIPEROO_AUTOBUY_EXPIRES_VALUE=10
SNIPEROO_AUTOBUY_EXPIRES_UNIT="minutes"
# Parâmetros adicionais da transação
SNIPEROO_PRIORITY_FEE=150000
SNIPEROO_SLIPPAGE_BPS=1500
# SNIPEROO_MAX_RETRIES=2

# --- Filtros de Segurança Pré-Monitoramento ---
MIN_RUGCHECK_SCORE=1
MIN_INITIAL_LIQUIDITY=10000
FILTER_MAX_INSIDERS_DETECTED=0
FILTER_MAX_SINGLE_HOLDER_PCT=15.0
FILTER_MAX_CREATOR_HOLDING_PCT=1.0

# --- Restrição de Horário ---
TRADING_ENABLED=True # Permite desligar tudo rapidamente
TRADING_START_HOUR=9  # Hora de início (formato 24h)
TRADING_END_HOUR=20   # Hora de fim (formato 24h) - Executa ATÉ esta hora começar (ou seja, para às 19:00:00)
